@model List<Empleado>

<h1 style="color:blue">Empleados Almacenados V5</h1>

@if (Context.Session.GetString("IDSEMPLEADOS") == null)
{
	<h2 style="color:red">
		No existen empleados en Session
	</h2>
}

<p>
	<a asp-controller="Empleados" asp-action="SessionEmpleadosV5">Volver a almacenar empleados V5</a>
</p>

<h2 style="color:red">
	@ViewData["MENSAJE"]
</h2>

@if (Model != null)
{
	<table class="table">
		<thead>
			<tr>
				<th>
					Apellido
				</th>
				<th>
					Oficio
				</th>
				<th>
					Salario
				</th>
				<th>
					IdDepartamento
				</th>
				<th>Eliminar</th>
			</tr>
		</thead>
		<tbody>
			@foreach (Empleado emp in Model)
			{
				<tr>
					<td>@emp.Apellido</td>
					<td>@emp.Oficio</td>
					<td>@emp.Salario</td>
					<td>@emp.IdDepartamento</td>
					<td>
						<a asp-controller="Empleados" asp-action="EmpleadosAlmacenadosV5" asp-route-ideliminar="@emp.IdEmpleado" class="btn btn-danger">
							Eliminar
						</a>
					</td>
				</tr>
			}

		</tbody>
	</table>
}